{
  "name": "play-today-bot",
  "version": "1.0.0",
  "main": "dist/functions.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development ts-node src/index.ts",
    "dev:watch": "NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "dev:bot": "NODE_ENV=development ts-node src/index.ts",
    "dev:bot:watch": "NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "dev:slots": "npx functions-framework --target=slotsFetcher --source=dist/functions.js --port=8080",
    "dev:slots:watch": "nodemon --watch src --ext ts --exec \"npm run build && npx functions-framework --target=slotsFetcher --source=dist/functions.js --port=8080\"",
    "deploy": "npm run build && gcloud functions deploy playTodayBot --gen2 --runtime=nodejs20 --trigger-http --allow-unauthenticated --entry-point=telegramWebhook --set-env-vars BOT_TOKEN=$BOT_TOKEN --region=europe-west1 --source=.",
    "set-webhook": "curl -X POST \"https://api.telegram.org/bot$BOT_TOKEN/setWebhook\" -d \"url=$WEBHOOK_URL\"",
    "delete-webhook": "curl -X POST \"https://api.telegram.org/bot$BOT_TOKEN/deleteWebhook\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Telegram bot for Play Today",
  "dependencies": {
    "@google-cloud/bigquery": "^7.3.0",
    "@google-cloud/functions-framework": "^3.4.0",
    "@google-cloud/storage": "^7.7.0",
    "dotenv": "^17.2.3",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-telegram-bot-api": "^0.64.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20"
  }
}
